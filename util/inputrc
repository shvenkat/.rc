## KEY BINDINGS --------------------------------------------------------------

# set editing-mode emacs

"\C-w": beginning-of-line
"\C-e": end-of-line
"\C-b": backward-word
"\C-n": forward-word
"\eb":  backward-char
"\en":  forward-char
"\C-y": character-search-backward
"\ey":  character-search

"\C-h": backward-delete-char
"\eh":  delete-char
"\C-f": backward-kill-word
"\C-g": kill-word
"\C-k": backward-kill-line
"\ek":  kill-line

"\C-p": yank
"\ep":  yank-last-arg
"\e\C-p": yank-nth-arg
"\e ":  set-mark
"\ed":  kill-region
"\ec":  copy-region-as-kill

"\C-r": reverse-search-history
"\C-t": forward-search-history
"\C-s": history-search-backward
"\C-o": previous-history
"\C-l": next-history
"\e,":  beginning-of-history
"\e.":  end-of-history

"\C-u": undo
"\C-q": abort
"\C-v": quoted-insert
"\ei":  menu-complete
"\el":  redraw-current-line

## VARIABLES -----------------------------------------------------------------

# Disable 8-bit input/output for compatibility
set convert-meta On
set enable-meta-key On
set input-meta Off
set output-meta Off
# set prefix-meta "ESC"

# set bind-tty-special-chars Off
set colored-stats Off
set completion-ignore-case On
set completion-map-case On
# set enable-keypad On
set expand-tilde Off
# set isearch-terminators "C-[ C-j"
set mark-directories On
set mark-symlinked-directories On
set match-hidden-files On
set show-all-if-ambiguous Off
set show-all-if-unmodified On
set completion-prefix-display-length 10
set skip-completed-text On
set visible-stats On

$if Bash
  set bell-style none
$else
  set bell-style audible
$endif
