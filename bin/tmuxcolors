#!/bin/bash

COLORSCHEMES="solarized-light|soll solarized-dark|sold"

usage () {
  echo "USAGE: $(basename $0) <colorscheme>"
  echo "    Supported colorschemes: $COLORSCHEMES"
}

if [[ $# -ne 1 ]]; then
  echo "Usage error: invalid number of arguments" 1>&2
  usage
  exit 1
fi

case $1 in
  solarized-light|soll)
    tmux source-file ~/.rc/.tmux.conf.colors.solarized-light
    ;;
  solarized-dark|sold)
    tmux source-file ~/.rc/.tmux.conf.colors.solarized-dark
    ;;
  *)
    echo "Usage error: $1 is not a supported colorscheme" 1>&2
    usage
    exit 1
    ;;
esac
