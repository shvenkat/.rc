#!/bin/bash

SSH_AGENT_START="/tmp/$(id -un)_${HOSTNAME}_start"
SSH_AGENT_STOP="/tmp/$(id -un)_${HOSTNAME}_stop"

if [[ -f "$SSH_AGENT_START" ]]; then
    . "$SSH_AGENT_START" > /dev/null
fi
touch "$SSH_AGENT_STOP"
chmod 0600 "$SSH_AGENT_STOP"
ssh-agent -k > "$SSH_AGENT_STOP"
echo ". $SSH_AGENT_STOP"
