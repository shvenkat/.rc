#!/bin/bash

mkdir -p ~/bin ~/.ssh ~/.gnupg
chmod 0700 ~/.ssh ~/.gnupg

while read file; do
  if [[ $(basename $file) != $file ]]; then
    mkdir -p $(dirname $file)
  fi
  ln -s -t ~/$(dirname $file) ~/.rc/$file
done <<EOF
bin/sahup
bin/tmuxcolors
.bashrc_profile
.certs
.colordiffrc
.gnupg/gpg.conf
.gnupg/gpg-agent.conf
.inputrc
.lessfilter
.Rprofile
.vim
.xinitrc
EOF

while read file; do
  cp ~/.rc/${file}.stub ~/$file
done <<EOF
.bashrc
.gitconfig
.tmux.conf
.vimrc
.zshrc
EOF
