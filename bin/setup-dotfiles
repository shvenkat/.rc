#!/bin/bash

FILES="
.aliases
.bash_functions
.bash_logout
.bash_profile
.bashrc
.bashrc.d
.certs
.colordiffrc
.dir_colors
.gitconfig
.gnupg/gpg.conf
.gnupg/gpg-agent.conf
.inputrc
.ssh/config
.startxwinrc
.tmux.conf
.vim
.vimrc
.xinitrc
bin/colordiff
bin/tmux-switch-colorscheme"

for file in $FILES; do
  if [[ $(basename $file) != $file ]]; then
    mkdir -p $(dirname $file)
  fi
  ln -si ~/.rc/$file ~/$file
done

chmod 0700 ~/.ssh ~/.gnupg
