#!/bin/bash

mkdir -p ~/bin ~/.ssh ~/.gnupg
chmod 0700 ~/.ssh ~/.gnupg

while read file; do
  if [[ $(basename $file) != $file ]]; then
    mkdir -p $(dirname $file)
  fi
  ln -s -t ~/$(dirname $file) ~/.rc/$file
done <<EOF
bin/connect-ssh-agent
bin/start-ssh-agent
bin/stop-ssh-agent
bin/tmuxcolors
.bashrc.d
.certs
.colordiffrc
.dir_colors
.gnupg/gpg.conf
.gnupg/gpg-agent.conf
.inputrc
.oh-my-zsh
.Rprofile
.vim
.xinitrc
.zshrc
EOF
# bin/colordiff

while read file; do
  cp ~/.rc/${file}.stub ~/$file
done <<EOF
.aliases
.bashrc
.gitconfig
.tmux.conf
.vimrc
EOF
