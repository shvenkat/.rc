# ls color
case $OSTYPE in
linux*|cygwin*)
  if which dircolors >/dev/null; then
    if [[ -r ~/.rc/.dircolors ]]; then
      eval "$(dircolors -b ~/.rc/.dircolors)"
    else
      eval "$(dircolors -b)"
    fi
  fi
  ;;
darwin*)
  # OSX's BSD ls uses LSCOLORS.
  export LSCOLORS="excxacacdxacacadadaeae"
  # Homebrew's GNU ls uses LS_COLORS, set by dircolors.
  if which dircolors >/dev/null; then
    if [[ -r ~/.rc/.dircolors ]]; then
      eval "$(dircolors -b ~/.rc/.dircolors)"
    else
      eval "$(dircolors -b)"
    fi
  fi
  ;;
esac
