# ==========  CONFIG RECIPE, IN fresh  =======================================


# fresh itself. Very meta.
fresh freshshell/fresh bin/fresh --bin


# ----------  TERMINAL  ------------------------------------------------------

# tmux. Delusions of multi-tasking.
fresh-options --file=~/.tmux.conf
    fresh shvenkat/dotfiles tmux/tmux.conf
    fresh shvenkat/dotfiles tmux/colorscheme_solarized_dark.conf
fresh-options

# X/xterm. The GUI that drove me to the text terminal.
# fresh shvenkat/dotfiles x/xinitrc --file


# ----------  COMMAND SHELL  -------------------------------------------------

# zsh. F*** yeah!
fresh zplug/zplug . --file=~/.zplug/
fresh-options --file=~/.zshrc
    fresh shvenkat/dotfiles shell/shared/misc
    fresh shvenkat/dotfiles shell/shared/path
    fresh shvenkat/dotfiles shell/shared/less
    fresh shvenkat/dotfiles shell/shared/ls
    fresh shvenkat/dotfiles shell/shared/source-highlight
    fresh shvenkat/dotfiles shell/shared/ssh
    fresh shvenkat/dotfiles shell/shared/term
    fresh shvenkat/dotfiles shell/shared/alias
    fresh shvenkat/dotfiles shell/shared/local
    fresh shvenkat/dotfiles shell/zsh/zshrc
fresh-options
fresh shvenkat/dotfiles shell/zsh/autoenv.zsh --file


# ----------  UTILITIES  -----------------------------------------------------

# Readline. Fools rush in where... Consider yourself warned.
fresh shvenkat/dotfiles util/inputrc --file

# colordiff. How do *you* read your diffs? In _monochrome_??
fresh shvenkat/dotfiles util/colordiffrc --file

# htop. Yeah, I'm that anal.
fresh shvenkat/dotfiles util/htoprc --file=~/.config/htop/htoprc

# less. You'll thank me later.
fresh shvenkat/dotfiles bin/lesspipe --bin
fresh shvenkat/dotfiles util/source-highlight.style --file=~/.config/source-highlight/esc.style
fresh shvenkat/dotfiles source-highlight --file=~/.local/share/source-highlight/

# nano. For the terminal dilettante, and the caffeine-deprived.
fresh shvenkat/dotfiles util/nanorc --file

# Miscellany.
fresh shvenkat/dotfiles bin/kill-pstree --bin
fresh shvenkat/dotfiles bin/machine-dashboard --bin
fresh shvenkat/dotfiles bin/machine-status --bin
fresh shvenkat/dotfiles bin/ssh-agent-connect --bin
fresh shvenkat/dotfiles bin/git-safeclone --bin


# ----------  PROGRAMMING  ---------------------------------------------------

# vim. UI done right. FUBAR scripting.
fresh-options --file=~/.config/nvim/init.vim
    fresh shvenkat/dotfiles neovim/init/register_plugins.vim
    fresh shvenkat/dotfiles 'neovim/init/core_*.vim'
    fresh shvenkat/dotfiles 'neovim/init/plugin_*.vim'
fresh-options
fresh shvenkat/dotfiles neovim/after --file=~/.config/nvim/after/
fresh shvenkat/dotfiles neovim/autoload --file=~/.config/nvim/autoload/
fresh junegunn/vim-plug plug.vim --file=config-nvim-autoload/plug.vim
fresh shvenkat/dotfiles neovim/UltiSnips --file=~/.config/nvim/UltiSnips/

# emacs. Scripting done right. Sadistic UI.
fresh shvenkat/dotfiles emacs/spacemacs --file
fresh syl20bnr/spacemacs . --file=~/.emacs.d/

# editorconfig. When you just can't avoid collaborating.
fresh shvenkat/dotfiles util/editorconfig --file

# git. What else.
fresh shvenkat/dotfiles git/gitconfig --file=~/.config/git/config
fresh shvenkat/dotfiles git/gitignore --file=~/.config/git/ignore
fresh shvenkat/dotfiles git/gitattributes --file=~/.config/git/attributes
fresh git/git contrib/diff-highlight/DiffHighlight.pm --file=~/.local/share/perl5/lib/perl5/DiffHighlight.pm
fresh git/git contrib/diff-highlight/diff-highlight.perl --bin=~/bin/diff-highlight \
    --filter="cat <(echo -e \"#!/usr/bin/perl\n\nuse lib '${HOME}/.local/share/perl5/lib/perl5';\nuse DiffHighlight;\n\") -"

# python. At least it's not perl.
fresh shvenkat/dotfiles python/flake8 --file


# ----------  LANGUAGES  -----------------------------------------------------

# R. Matey.
fresh shvenkat/dotfiles R/Rprofile --file


