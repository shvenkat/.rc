{
  "user": {
    "com.googlecode.iterm2": {

      // DISPLAY

      // Windows, tabs, panes.
      "UseBorder": false,
      "HideScrollbar": true,
      "WindowNumber": true,             // Show window number in window title.
      "JobName": false,                 // Do not show current job in window title.
      "ShowBookmarkName": false,        // Do not show current profile in window title.
      "HideTab": true,                  // Hide tab bar.
      "OnlyWhenMoreTabs": true,         // Show tab bar if there are multiple tabs.
      "TabViewType": 0,                 // Show tab bar along the top edge of the window.
      "UseCompactLabel": true,

      // Zoom.
      "AdjustWindowForFontSizeChange": true,
      "MaxVertically": false,           // Zoom maintains proportions.

      // Fullscreen.
      "UseLionStyleFullscreen": false,  // Using fullscreen does not switch desktop "space".
      "HideMenuBarInFullscreen": true,
      "FsTabDelay": 0.5,                // Briefly show the tab bar when adding/switching tabs.
      "DisableFullscreenTransparency": true,

      // Dimming.
      "DimBackgroundWindows": false,
      "DimInactiveSplitPanes": false,
      "DimOnlyText": false,
      "AnimateDimming": false,

      // Sidebar.
      "Show Toolbelt": false,

      // INPUT

      // Keyboard.
      "Hotkey": false,                  // Disable system-wide hotkey.
      // Enable "secure keyboard entry" for what it's worth, which prevents
      // other non-root processes to access or alter keyboard input to iTerm.
      // See discussion at https://security.stackexchange.com/a/47786/8918.
      "Secure Input": true,

      // Mouse and trackpad.
      "PassOnControlClick": false,      // Do not report Control + click to the terminal.
      "OptionClickMovesCursor": false,  // Disable Option + click to move cursor.
      "CommandSelection": false,        // Disable Command + click to open files and URLs.
      "DoubleClickPerformsSmartSelection": false,  // Double click selects a word.
      "TripleClickSelectsFullWrappedLines": true,  // Triple click selects a (possibly wrapped) line.
      "ThreeFingerEmulates": false,     // Do not emulate middle click using three-finger tap.
      "FocusFollowsMouse": false,

      // Key remapping.
      "Control": 1,                     // Do not remap.
      "LeftOption": 2,                  // Do not remap.
      "RightOption": 3,                 // Do not remap.
      "LeftCommand": 7,                 // Do not remap.
      "RightCommand": 8,                // Do not remap.

      // APPLICATION

      // Updates.
      "SUEnableAutomaticChecks": true,  // Automatically check for new release.
      "SUAutomaticallyUpdate": true,    // Automatically update to new release.
      "SUFeedAlternateAppNameKey": "iTerm",
      "CheckTestRelease": true,         // Include test releases in update check/install.

      // Launch and Exit.
      "OpenArrangementAtStartup": false,  // Do not restore window arrangement.
      "OpenBookmark": false,            // Do not open profile list.
      "RestoreWindowContents": false,   // Do not restore window contents.
      "PromptOnQuit": true,             // Confirm application exit.
      "QuitWhenAllWindowsClosed": false,

      // Preferences.
      "LoadPrefsFromCustomFolder": false,
      "PrefsCustomFolder": "",
      "Default Bookmark Guid": "3CB52AA6-5BBB-4F15-B00D-237B896E9FEA",  // My custom profile.

      // MISC. FEATURES

      // Clipboard.
      "AllowClipboardAccess": false,    // Deny clipboard access through the terminal.
      "CopySelection": true,            // Copy selection to clipboard.
      "CopyLastNewline": false,         // Do not copy trailing newline to clipboard.
      "PasteFromClipboard": false,      // Do not paste from clipboard.
      "SavePasteHistory": false,        // Do not save copy/paste and command history to disk.
      "WordCharacters": "/-+\\~_.",     // Characters included in words when selecting.

      // Terminal.
      "DisablePotentiallyInsecureEscapeSequences": true,  // Disables inline images.

      // tmux integration, when using `tmux -CC [attach]`.
      "AutoHideTmuxClientSession": false,  // Use <Esc> in the tmux client session to detach.
      "OpenTmuxWindowsIn": 1,           // Open tmux windows as tabs in a new iTerm2 window.

      // Semantic history.
      "PerformDNSLookups": false,       // Do not lookup hosts in to validate URLs.

      // Instant replay.
      "IRMemory": 0,                    // Set instant replay cache size to zero.

      // Session persistence.
      "RunJobsInServers": false,        // Disable session restoration.

      // Services.
      "EnableRendezvous": false         // Do not add Bonjour hosts to profiles.
    }
  }
}
