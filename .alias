case $OSENV in
linux)
    alias startsa='eval "$(start-ssh-agent)"'
    alias stopsa='eval "$(stop-ssh-agent)"'
    alias connectsa='eval "$(connect-ssh-agent)"'
    ;;
macosx)
    ;;
cygwin)
    alias open=cygstart
    ;;
esac

alias ls='ls --color=auto'
alias la='ls -AF'
alias lt='ls -AFt'
alias ll='ls -alFh'
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
alias df='df -h'
alias du='du -h'
alias du1='du -h -d1'
alias diff='colordiff -u'
alias diffy='colordiff -y'
alias cdiff='colordiff -u'
alias cdiffy='colordiff -y'
alias tab='column -t -s"	"'
# alias whence='type -a'
alias grep='grep --color --binary-file=without-match'
alias rdiff='rsync -nacOziHS --delete'
alias new='ll -t | head'
alias ends='(head -n5; echo; tail -n5)'
alias ta='tmux attach'
alias R='R --quiet'
alias vim='vim -X'
alias vimm='vim -u ~/.vimrc.minimal'
alias vims='\vim --servername VIM'
alias sum="awk 'BEGIN { s = 0 } { s += \$1 } END { print s }'"
alias mean="awk 'BEGIN { n = 0; s = 0 } { n += 1; s += \$1 } END { print s/n }'"

diffsort () {
  diff <(sort $1) <(sort $2)
}
TRANSFER_CMD=(
  "rsync"
  "--delete" "--update"
  "--recursive" "--checksum" "--compress" "--itemize-changes"
  "--exclude" '.git/'
  "--exclude" 'build/'
  "--exclude" '*~'
  "--exclude" 'env/'
  "--exclude" '__pycache__/'
  "--exclude" '.ipython/'
  "--exclude" '*.pyc'
)
dget () {
  ${TRANSFER_CMD[@]} --dry-run "${1}/" "${PWD}/"
}
get () {
  ${TRANSFER_CMD[@]} "${1}/" "${PWD}/"
}
dput () {
  ${TRANSFER_CMD[@]} --dry-run "${PWD}/" "${1}/"
}
put () {
  ${TRANSFER_CMD[@]} "${PWD}/" "${1}/"
}
