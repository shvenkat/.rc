## COLORSCHEME RELATED OPTIONS ----------------------------------------------

set-option -g status-style "fg=brightgreen,bg=black"
set-option -g message-style "fg=yellow"

set-option -gw window-status-current-style "fg=brightwhite,bg=brightgreen"
set-option -gw window-status-activity-style "fg=brightblack,bg=yellow"
set-option -gw window-status-bell-style "fg=brightblack,bg=yellow"

set-option -gw pane-active-border-style "fg=brightwhite"
set-option -gw pane-border-style "fg=brightgreen"
