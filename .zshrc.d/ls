# ls color
case $OSENV in
linux|cygwin)
  if which dircolors >/dev/null; then
    if [[ -r ~/.rc/.dircolors ]]; then
      eval "$(dircolors -b ~/.rc/.dircolors)"
    else
      eval "$(dircolors -b)"
    fi
  fi
  ;;
macosx)
  export LSCOLORS="excxacacdxacacadadaeae"
  if which dircolors >/dev/null; then
    if [[ -r ~/.rc/.dircolors ]]; then
      eval "$(dircolors -b ~/.rc/.dircolors)"
    else
      eval "$(dircolors -b)"
    fi
  fi
  ;;
esac
