# Key bindings
bindkey -v

bindkey "^w"    beginning-of-line
bindkey "^e"    end-of-line
bindkey "^b"    backward-word
bindkey "^n"    forward-word
bindkey "\eb"   backward-char
bindkey "\en"   forward-char

bindkey "^h"    backward-delete-char
bindkey "\eh"   delete-char
bindkey "^f"    backward-kill-word
bindkey "^g"    kill-word
bindkey "^k"    backward-kill-line
bindkey "\ek"   kill-line

bindkey "^p"    yank
bindkey "\ep"   yank-last-arg
bindkey "\e^p"  yank-nth-arg
bindkey "\e "   set-mark
bindkey "\ed"   kill-region
bindkey "\ec"   copy-region-as-kill

bindkey "^r"    history-incremental-search-backward
bindkey "^t"    history-beginning-search-backward
bindkey "^s"    history-incremental-search-forward
bindkey "^j"    accept-search
bindkey "^o"    up-history
bindkey "^l"    down-history
bindkey "\e,"   beginning-of-history
bindkey "\e."   end-of-history

bindkey "^u"    undo
bindkey "^q"    send-break
bindkey "^v"    quoted-insert
bindkey "\ei"   menu-complete
bindkey "\el"   reset-prompt
