# Key bindings
bindkey -v

bindkey "^W"      beginning-of-line
bindkey "^E"      end-of-line
bindkey "^B"      backward-word
bindkey "^N"      forward-word
bindkey "ESC-B"   backward-char
bindkey "ESC-N"   forward-char
bindkey "^Y"      character-search-backward
bindkey "ESC-Y"   character-search

bindkey "^H"      backward-delete-char
bindkey "ESC-H"   delete-char
bindkey "^F"      backward-kill-word
bindkey "^G"      kill-word
bindkey "^K"      backward-kill-line
bindkey "ESC-K"   kill-line

bindkey "^P"      yank
bindkey "ESC-P"   yank-last-arg
bindkey "ESC-^P"  yank-nth-arg
bindkey "ESC- "   set-mark
bindkey "ESC-D"   kill-region
bindkey "ESC-C"   copy-region-as-kill

bindkey "^R"      reverse-search-history
bindkey "^T"      forward-search-history
bindkey "^S"      history-search-backward
bindkey "^O"      previous-history
bindkey "^L"      next-history
bindkey "ESC-,"   beginning-of-history
bindkey "ESC-."   end-of-history

bindkey "^U"      undo
bindkey "^Q"      abort
bindkey "^V"      quoted-insert
bindkey "ESC-I"   menu-complete
bindkey "ESC-L"   redraw-current-line
