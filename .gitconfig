[user]
    name = Shiv
    email = shvenkat@users.noreply.github.com
[github]
    user = shvenkat

[url "https://github.com"]
    insteadOf = git://github.com
[http]
    ; sslCAinfo = /home/shvenkat/.certs/cacert.pem

[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.rc/.gitignore.global
[push]
    default = simple

[pager]
    diff = diff-highlight | less --tabs=4 -RFX --pattern '^diff'
    ; diff = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
[interactive]
    diffFilter = diff-highlight | less --tabs=4 -RFX
    ; diff-so-fancy breaks the custom diff header expected by interactive git
    ; commands such as add, stash, etc. (see issue #35 on github).
    ; diffFilter = diff-so-fancy --patch-mode | less --tabs=4 -RFX
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
; [log]
;     decorate = full

[color]
    branch = always
    diff = always
    grep = always
    interactive = always
    pager = true
    showbranch = always
    status = always
    ui = always
[color "branch"]
    current = reverse
    local = normal
    upstream = white
    remote = bold green
    plain = bold green
[color "diff"]
    plain = normal
    old = magenta
    new = cyan
    frag = blue
    func = blue
    meta = bold cyan
    commit = reverse
    whitespace = red reverse
[color "grep"]
    context = normal
    selected = normal
    match = bold white
    filename = yellow
    function = blue
    linenumber = black
    separator = normal
[color "interactive"]
    prompt = bold magenta
    header = bold white
    help = bold green
    error = red
[color "status"]
    header = normal
    added = green
    changed = blue
    untracked = bold white
    branch = reverse
    nobranch = bold red
    unmerged = bold magenta

[diff-so-fancy]
    markEmptyLines = true
    changeHunkIndicators = false
    stripLeadingSymbols = true
    useUnicodeRuler = false

[alias]
    ; Terse status.
    stat = status -s

    ; Remove color escapes from diff output to be used as a patch.
    patch = --no-pager diff --no-color

    ; The following git log aliases decorate the output with age, committer and branch/tag.
    ; Use these with: git logs, git logo or git logg.

    ; Simple - one line per commit in the current branch.
    logs = log \
        --format=format:'%C(bold green)%h%C(reset)  %C(bold yellow)%<(6,trunc)%ar%C(reset)  %C(bold green)%<(10,trunc)%an%C(reset)  %s %C(green)%d%C(reset)'

    ; Overview - one line for the tip of each branch/tag in the repo.
    logo = log --graph --all --simplify-by-decoration --date-order \
        --format=format:'%C(bold green)%h%C(reset)  %C(bold yellow)%<(6,trunc)%ar%C(reset)  %C(bold green)%<(10,trunc)%an%C(reset)  %s %C(green)%d%C(reset)'

    ; Graph - one commit per commit in the current branch with ancestry graph.
    logg = log --graph --date-order \
        --format=format:'%C(bold green)%h%C(reset)  %C(bold yellow)%<(6,trunc)%ar%C(reset)  %C(bold green)%<(10,trunc)%an%C(reset)  %s %C(green)%d%C(reset)'

    ; Verify - Graph + verification of signed commit/tag
    logv = log --graph --date-order \
        --format=format:'%C(bold green)%h%C(reset)  %C(bold white)%G?%C(reset) %GK  %C(bold yellow)%<(6,trunc)%ar%C(reset)  %C(bold green)%<(10,trunc)%an%C(reset)  %s %C(green)%d%C(reset)'

    ; First common ancestor (as opposed to last common ancestor returned by merge-base)
    fca = !bash -c 'diff --old-line-format='' --new-line-format='' <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | head -1' -
